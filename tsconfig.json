{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "types": ["jest", "@testing-library/jest-dom"],
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "@/types/*": ["types/*"],
      "@/services/*": ["services/*"],
      "@/components/*": ["components/*"],
      "@/assets/*": ["assets/*"],
      "@/context/*": ["context/*"],
      "@/constants/*": ["constants/*"]
    }
  },
  "include": ["src", "global.d.ts", "jest.config.ts"]
}
